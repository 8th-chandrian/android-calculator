<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_columnSpan="4"
            android:layout_gravity="right"
            android:id="@+id/calcDisplayScroll">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/calcDisplay"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="fill"
                android:gravity="right"
                android:textSize="40sp"
                android:minLines="1"
                android:singleLine="true"
                android:paddingRight="25dp"/>

        </HorizontalScrollView>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/delete_string"
            android:id="@+id/btnDelete"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="deleteClick"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/clear_string"
            android:id="@+id/btnClear"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="clearClick"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/openpars_string"
            android:id="@+id/btnOpenPars"
            android:layout_row="6"
            android:layout_column="2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom"
            android:onClick="openParsClick"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/closepars_string"
            android:id="@+id/btnClosePars"
            android:layout_row="6"
            android:layout_column="3"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom"
            android:onClick="closeParsClick"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/seven_string"
            android:id="@+id/btnSeven"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="sevenClick" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/eight_string"
            android:id="@+id/btnEight"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="eightClick" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/nine_string"
            android:id="@+id/btnNine"
            android:layout_row="7"
            android:layout_column="2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="nineClick" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/division_string"
            android:id="@+id/btnDivision"
            android:layout_row="7"
            android:layout_column="3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="divisionClick"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/four_string"
            android:id="@+id/btnFour"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="fourClick" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/five_string"
            android:id="@+id/btnFive"
            android:layout_row="8"
            android:layout_column="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="fiveClick" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/six_string"
            android:id="@+id/btnSix"
            android:layout_row="8"
            android:layout_column="2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="sixClick" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/multiplication_string"
            android:id="@+id/btnMultiplication"
            android:layout_row="8"
            android:layout_column="3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="multiplicationClick"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/one_string"
            android:id="@+id/btnOne"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="oneClick" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/two_string"
            android:id="@+id/btnTwo"
            android:layout_row="9"
            android:layout_column="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="twoClick" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/three_string"
            android:id="@+id/btnThree"
            android:layout_row="9"
            android:layout_column="2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="threeClick" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/decimal_string"
            android:id="@+id/btnDecimal"
            android:layout_row="10"
            android:layout_column="0"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="decimalClick"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/zero_string"
            android:id="@+id/btnZero"
            android:layout_row="10"
            android:layout_column="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="zeroClick" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/equals_string"
            android:id="@+id/btnEquals"
            android:layout_row="10"
            android:layout_column="2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="equalsClick"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/subtraction_string"
            android:id="@+id/btnSubtraction"
            android:layout_row="9"
            android:layout_column="3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="subtractionClick"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/addition_string"
            android:id="@+id/btnAddition"
            android:layout_row="10"
            android:layout_column="3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="additionClick" />
    </GridLayout>
</RelativeLayout>
